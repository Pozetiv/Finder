<!DOCTYPE html>
<html>
  <head>
    <title>Finder</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
  </head>
  <body>
    <nav class="navbar" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <div class="navbar-item">
          <%= link_to 'Finder', root_path %>
        </div>
      </div>
      <div class="navbar-menu">
       <div class="navbar-end">
         <div class="navbar-item">
          <%= link_to 'Created new Post', new_post_path, class: 'button' %>
          <% if user_signed_in? %>

            <div class="dropdown">
              <div class="dropdown-trigger">
                <button class="button" aria-haspopup="true" aria-controls="dropdown-menu">
                  <span><%= current_user.email %></span>
                  <span class="icon is-small">
                    <i class="fa fa-angle-down" aria-hidden="true"></i>
                  </span>
                </button>
              </div>
              <div class="dropdown-menu" id="dropdown-menu" role="menu">
                <div class="dropdown-content">
                  <%= link_to 'You finded jobs', applies_path, class: 'dropdown-item' %>
                  <%= link_to 'Edit profile', edit_user_registration_path, class: 'dropdown-item'%>
                  <hr class="dropdown-divider">
                  <%= link_to 'Logout',  destroy_user_session_path, method: :delete, class: 'dropdown-item' %>
                </div>
              </div>
            </div>
            <% else %>
              <%= link_to 'SIGN IN', new_user_session_path, class: 'button' %>
           <% end %>
         </div>
       </div>
      </div>
      </nav>
     <!-- flash block -->
    <% flash.each do |type, msg| %>
      <section class="hero is-<%= type %>">
        <div class="hero-body">
          <div class="container">
            <h2 class="subtitle">
              <%= msg %>
            </h2>
          </div>
        </div>
      </section>
      <% end %>

      <div class="container is-fluid">
        <%= yield %>
      </div>
  </body>
</html>
